
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId}/profile.jpg {
      allow read;
      allow write: if isOwner(userId);
    }
    
    match /kyc-documents/{userId}/{document} {
      allow write: if isOwner(userId);
      allow read: if isOwner(userId) || request.auth.token.role == 'kycAdmin' || request.auth.token.role == 'superAdmin';
    }

    // Corrected path for match results
    match /match-results/{matchId}/{userId} {
      allow read: if request.auth != null; 
      // Allow write if the user is authenticated and is the one uploading the file
      allow write: if request.auth.uid == userId;
    }
    
    match /banners/{bannerName} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
  }
}
