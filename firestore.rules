
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'superAdmin';
    }
    function isKycAdmin() {
      return request.auth != null && (request.auth.token.role == 'kycAdmin' || isSuperAdmin());
    }
    function isDepositAdmin() {
      return request.auth != null && (request.auth.token.role == 'depositAdmin' || isSuperAdmin());
    }
    function isWithdrawalAdmin() {
      return request.auth != null && (request.auth.token.role == 'withdrawalAdmin' || isSuperAdmin());
    }
    function isMatchAdmin() {
      return request.auth != null && (request.auth.token.role == 'matchAdmin' || isSuperAdmin());
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // --- User Profiles ---
    match /users/{userId} {
      allow get: if request.auth != null;
      allow list: if isAdmin();
      allow update, delete: if isOwner(userId);
      allow create: if isOwner(userId);
    }
    
    // User Activity Subcollection
    match /users/{userId}/activity/{logId} {
        allow read: if isOwner(userId) || isSuperAdmin();
    }

    // --- Publicly Readable Data ---
    match /tournaments/{doc=**}   { allow read: if true; }
    match /announcements/{docId} { allow read: if true; }
    match /news/{docId}          { allow read: if true; }
    match /banners/{docId}       { allow read: if true; }
    match /tasks/{taskId}        { allow read: if true; }
    match /dashboardCardImages/{docId} { allow read: if true; }
    
    // --- App Settings (e.g., for QR codes) ---
    match /upiConfiguration/{doc=**} { allow read: if true; }
    match /referralConfiguration/settings { allow read: if true; }
    match /bonus_config/settings { allow read: if true; }
    match /settings/global { allow read: if true; }


    // --- Matches ---
    match /matches/{matchId} {
      allow read: if request.auth != null;
      allow list: if request.auth != null;
      allow update: if (request.auth != null && request.resource.data.playerIds.hasAny([request.auth.uid])) || isAdmin();
    }
    
    // --- Match Results ---
    match /matches/{matchId}/results/{userId} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // --- Financial Transactions ---
    match /depositRequests/{depositId} {
        allow create: if isOwner(request.resource.data.userId);
        allow get: if isOwner(resource.data.userId) || isDepositAdmin();
        allow list: if isDepositAdmin();
    }
    match /withdrawalRequests/{withdrawalId} {
        allow create: if isOwner(request.resource.data.userId);
        allow get: if isOwner(resource.data.userId) || isWithdrawalAdmin();
        allow list: if isWithdrawalAdmin();
    }
    match /transactions/{transactionId} {
        allow get: if isOwner(resource.data.userId) || isAdmin();
        allow list: if isAdmin();
    }


    // --- UTR Uniqueness Check ---
    match /submittedUTRs/{utr} {
      allow get: if request.auth != null;
      allow create: if request.auth != null;
    }

    // --- User-Specific Private Data ---
    match /kycApplications/{kycId} {
      allow get: if isOwner(resource.data.userId) || isKycAdmin();
      allow list: if isKycAdmin();
      allow create: if isOwner(request.resource.data.userId);
    }
    
    match /supportChats/{userId}/{doc=**} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    match /user_tasks/{userId}/{doc=**} {
      allow read: if isOwner(userId);
    }

    // ========= ADMIN RULE: Global Access =========
    // This rule grants the superAdmin full read/write access to the entire database.
    match /{path=**} {
      allow read, write: if isSuperAdmin();
    }
  }
}
