
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    function isSuperAdmin() {
      return request.auth.token.role == 'superAdmin';
    }
    
    function isKycAdmin() {
      return request.auth.token.role == 'kycAdmin' || isSuperAdmin();
    }
    
    function isDepositAdmin() {
      return request.auth.token.role == 'depositAdmin' || isSuperAdmin();
    }
    
    function isWithdrawalAdmin() {
      return request.auth.token.role == 'withdrawalAdmin' || isSuperAdmin();
    }

    function isMatchAdmin() {
      return request.auth.token.role == 'matchAdmin' || isSuperAdmin();
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Admins can read/write any user document. Users can only read/write their own.
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId) || isSuperAdmin();
    }

    // KYC applications can be created by users, read by the owner or a KYC admin, and updated only by a KYC admin.
    match /kycApplications/{kycId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if isOwner(request.resource.data.userId) || isKycAdmin();
      allow update: if isKycAdmin();
    }
    
    // Deposit requests can be created by users, read by owner or deposit admin, and updated by deposit admin.
    match /depositRequests/{depositId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if isOwner(request.resource.data.userId) || isDepositAdmin();
      allow update: if isDepositAdmin();
    }

    // Withdrawal requests can be created by users, read by owner or withdrawal admin, and updated by withdrawal admin.
    match /withdrawalRequests/{withdrawalId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if isOwner(request.resource.data.userId) || isWithdrawalAdmin();
      allow update: if isWithdrawalAdmin();
    }

    // Matches can be read by any authenticated user, but writes are restricted.
    match /matches/{matchId} {
      allow read: if request.auth.uid != null;
      // create/update/delete handled by cloud functions
      allow write: if false;
    }
    
    match /matches/{matchId}/results/{userId} {
      // Users can only submit their own results.
      allow create: if isOwner(userId);
      // No one can update a result once submitted.
      allow update: if false;
      allow read: if request.auth.uid != null;
    }

    // Transactions are read-only for users to see their own history. Creation is handled by functions.
    match /transactions/{transactionId} {
      allow read: if isOwner(request.resource.data.userId) || isAdmin();
      allow create: if false; 
      allow update: if false;
      allow delete: if false;
    }
    
    // Queues for matchmaking. Users can add and remove themselves.
    match /roomCodeCreators/{userId} {
      allow write: if isOwner(userId);
      allow read: if request.auth.uid != null;
    }
    match /roomCodeSeekers/{userId} {
      allow write: if isOwner(userId);
      allow read: if request.auth.uid != null;
    }

    // Configuration collections are read-only for users, writable only by superAdmins
    match /referralConfiguration/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }
    
    match /matchCommission/{docId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    
    match /upiConfiguration/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }
    
     match /bonus_config/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }
    
    match /tasks/{docId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    
    match /user_tasks/{userId}/{taskId} {
        allow read: if isOwner(userId);
        allow write: if false; // Progress updated by functions
    }
  }
}
