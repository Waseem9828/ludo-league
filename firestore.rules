
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // ========= HELPER FUNCTIONS =========
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.get('admin', false) == true;
    }

    function isSuperAdmin() {
      return request.auth.token.get('role', '') == 'superAdmin';
    }
    
    function isKycAdmin() {
      return request.auth.token.get('role', '') == 'kycAdmin' || isSuperAdmin();
    }
    
    function isDepositAdmin() {
      return request.auth.token.get('role', '') == 'depositAdmin' || isSuperAdmin();
    }
    
    function isWithdrawalAdmin() {
      return request.auth.token.get('role', '') == 'withdrawalAdmin' || isSuperAdmin();
    }

    function isMatchAdmin() {
      return request.auth.token.get('role', '') == 'matchAdmin' || isSuperAdmin();
    }
    
    // ========= USER & PROFILE DATA =========
    // Users can read any profile, but only write their own. SuperAdmins can write any.
    match /users/{userId} {
      allow read: if request.auth.uid != null;
      allow write: if isOwner(userId) || isSuperAdmin();
    }

    // ========= KYC, DEPOSITS, WITHDRAWALS =========
    // Users create their own, can get their own. List is for admins or specific user queries.
    match /kycApplications/{kycId} {
      allow create: if isOwner(request.resource.data.userId);
      allow get: if isOwner(resource.data.userId) || isKycAdmin();
      allow list: if isKycAdmin();
      allow update: if isKycAdmin();
    }
    
    match /depositRequests/{depositId} {
      allow create: if isOwner(request.resource.data.userId);
      allow get: if isOwner(resource.data.userId) || isDepositAdmin();
      allow list: if (request.auth.uid == request.query.where.userId) || isDepositAdmin();
      allow update: if isDepositAdmin();
    }

    match /withdrawalRequests/{withdrawalId} {
      allow create: if isOwner(request.resource.data.userId);
      allow get: if isOwner(resource.data.userId) || isWithdrawalAdmin();
      allow list: if (request.auth.uid == request.query.where.userId) || isWithdrawalAdmin();
      allow update: if isWithdrawalAdmin();
    }
    
    // ========= TRANSACTIONS =========
    // Creation is handled by functions. Users can list/get their own. Admins can list/get any.
    match /transactions/{transactionId} {
      allow get: if isOwner(resource.data.userId) || isAdmin();
      allow list: if (request.auth.uid == request.query.where.userId) || isAdmin();
      allow create, update, delete: if false; 
    }

    // ========= MATCH & GAMEPLAY =========
    match /matches/{matchId} {
      allow read: if request.auth.uid != null;
      // Creation/Update/Deletion is handled by cloud functions for integrity
      allow write: if false; 
    }
    
    match /matches/{matchId}/results/{userId} {
      // Users can only submit their own results. Admins and involved players can read.
      allow create: if isOwner(userId);
      allow read: if isOwner(userId) || isAdmin(); // Simplified for now
      allow update: if false; // Cannot update a result once submitted.
    }
    
    // ========= TOURNAMENTS =========
    match /tournaments/{tournamentId} {
        allow read: if request.auth.uid != null;
        // Creation/updates handled by admins in the admin panel.
        allow write: if isMatchAdmin();
    }
    
     match /tournaments/{tournamentId}/matches/{matchId} {
        allow read: if request.auth.uid != null;
     }

    // ========= APP CONTENT & CONFIG (Mostly Read-Only for Users) =========
    match /referralConfiguration/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }
    match /matchCommission/{docId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    match /upiConfiguration/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }
     match /bonus_config/{docId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }
    match /tasks/{taskId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    match /news/{newsId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    match /banners/{bannerId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    match /announcements/{announcementId} {
        allow read: if request.auth.uid != null;
        allow write: if isSuperAdmin();
    }
    match /dashboardCardImages/{imageId} {
      allow read: if request.auth.uid != null;
      allow write: if isSuperAdmin();
    }

    // ========= USER-SPECIFIC SUBCOLLECTIONS =========
    match /user_tasks/{userId}/tasks/{taskId} {
        // Users can only read their own task progress. Progress is updated by functions.
        allow read: if isOwner(userId);
        allow write: if false; 
    }
    
    match /supportChats/{userId} {
        allow list: if isAdmin();
    }
    match /supportChats/{userId}/{path=**} {
         allow read, write: if isOwner(userId) || isAdmin();
    }
    
    // ========= COMMUNITY FORUM =========
    // Any authenticated user can read posts/replies.
    // Users can create their own posts/replies.
    // MatchAdmins or SuperAdmins can update posts (for moderation).
    match /forumPosts/{postId} {
      allow read: if request.auth.uid != null;
      allow create: if isOwner(request.resource.data.authorId);
      allow update: if isOwner(resource.data.authorId) || isMatchAdmin();
    }
    match /forumPosts/{postId}/replies/{replyId} {
      allow read: if request.auth.uid != null;
      allow create: if isOwner(request.resource.data.authorId);
    }
    
    // This is a catch-all for old queue collections that may not be in use but should be secured.
    match /roomCodeCreators/{userId} {
      allow read, write: if false;
    }
    match /roomCodeSeekers/{userId} {
      allow read, write: if false;
    }
    match /adminLogs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Logs are immutable, written by functions
    }
  }
}
