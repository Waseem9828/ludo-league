rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin roles
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Admins can read/write anything
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Users can only manage their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid != null; // Any authenticated user can create a profile
    }

    // KYC data can only be accessed by the user it belongs to
    match /kyc/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Tournaments and matches are public and can be read by any authenticated user
    match /tournaments/{tournamentId} {
      allow get: if request.auth.uid != null;
      allow list: if request.auth.uid != null;
    }

    match /matches/{matchId} {
      allow get: if request.auth.uid != null;
      allow list: if request.auth.uid != null;
    }
  }
}
