rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isSuperAdmin() {
      return request.auth != null && request.auth.token.role == 'superAdmin';
    }
    function isKycAdmin() {
      return request.auth != null && (request.auth.token.role == 'kycAdmin' || isSuperAdmin());
    }
    function isDepositAdmin() {
      return request.auth != null && (request.auth.token.role == 'depositAdmin' || isSuperAdmin());
    }
    function isWithdrawalAdmin() {
      return request.auth != null && (request.auth.token.role == 'withdrawalAdmin' || isSuperAdmin());
    }
    function isMatchAdmin() {
      return request.auth != null && (request.auth.token.role == 'matchAdmin' || isSuperAdmin());
    }
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // --- User Profiles ---
    match /users/{userId} {
      // Any signed-in user can read public profiles.
      allow read: if request.auth != null;
      // A user can only update or delete their own profile.
      allow update, delete: if isOwner(userId);
      // Any signed-in user can create their own user profile document.
      allow create: if isOwner(userId);
    }
    
    // User Activity Subcollection
    match /users/{userId}/activity/{logId} {
        allow read: if isOwner(userId) || isAdmin();
    }

    // --- Publicly Readable Data ---
    match /tournaments/{doc=**}   { allow read: if request.auth != null; }
    match /announcements/{docId} { allow read: if request.auth != null; }
    match /news/{docId}          { allow read: if request.auth != null; }
    match /banners/{docId}       { allow read: if request.auth != null; }
    match /tasks/{taskId}        { allow read: if request.auth != null; }
    
    // --- App Settings (e.g., for QR codes) ---
    match /upiConfiguration/{doc=**} { allow read: if request.auth != null; }
    match /referralConfiguration/settings { allow read: if request.auth != null; }
    match /bonus_config/settings { allow read: if request.auth != null; }
    match /settings/global { allow read: if true; }

    // --- Matches ---
    match /matches/{matchId} {
      allow read: if request.auth != null; // Any user can see match details.
      allow list: if request.auth != null;
      allow update: if request.auth != null && request.resource.data.playerIds.hasAny([request.auth.uid]);
    }
    
    // --- Match Results ---
    match /matches/{matchId}/results/{userId} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId);
    }

    // --- Financial Transactions ---
    // Users can only read their own financial documents. All writes are handled by Cloud Functions.
    match /depositRequests/{depositId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isOwner(request.resource.data.userId);
    }
    match /withdrawalRequests/{withdrawalId} {
        allow read: if isOwner(resource.data.userId);
        allow create: if isOwner(request.resource.data.userId);
    }
    match /transactions/{transactionId} {
        allow read: if isOwner(resource.data.userId);
    }

    // --- User-Specific Private Data ---
    match /kycApplications/{kycId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }
    
    match /supportChats/{userId}/{doc=**} {
      allow read, write: if isOwner(userId);
    }

    match /user_tasks/{userId}/{doc=**} {
      allow read: if isOwner(userId);
    }

    // ========= ADMIN RULE: Global Access =========
    match /{path=**} {
      allow read, write: if isAdmin();
    }
  }
}
